# Environment Variables Sample

# This file documents the required environment variables for the {{PHASE_NAME}} phase
# Copy this file to .env and customize the values for your environment

# =============================================================================
# PHASE CONFIGURATION
# =============================================================================

# Phase identification
PHASE_NAME={{PHASE_NAME}}
PHASE_ID={{PHASE_ID}}
PHASE_VERSION={{PHASE_VERSION}}

# Phase description
PHASE_DESCRIPTION={{PHASE_DESCRIPTION}}
PHASE_AUTHOR={{AUTHOR}}
PHASE_CREATED_AT={{CREATED_AT}}

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment type (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true
VERBOSE=false

# Logging level
LOG_LEVEL=INFO
LOG_FORMAT=standard
LOG_FILE=logs/{{PHASE_NAME}}.log

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Maximum number of worker processes
MAX_WORKERS=4

# Timeout settings (in seconds)
TIMEOUT=300
RETRY_ATTEMPTS=3
RETRY_DELAY=1.0

# Memory settings
MAX_MEMORY=1GB
MEMORY_THRESHOLD=0.8

# =============================================================================
# INPUT/OUTPUT SETTINGS
# =============================================================================

# Input settings
INPUT_DIR=inputs/
INPUT_FORMATS=pdf,docx,txt,png,jpg,jpeg,tiff
MAX_FILE_SIZE=100MB
BATCH_SIZE=10

# Output settings
OUTPUT_DIR=outputs/
OUTPUT_FORMAT=json
OUTPUT_COMPRESSION=false
OUTPUT_METADATA=true
OUTPUT_STATS=true

# =============================================================================
# OCR SETTINGS
# =============================================================================

# OCR engine
OCR_ENGINE=tesseract
OCR_LANGUAGE=deu+eng
OCR_DPI=300
OCR_PSM=6
OCR_OEM=3
OCR_CONFIDENCE_THRESHOLD=75.0

# OCR performance
OCR_MAX_WORKERS=4
OCR_BATCH_SIZE=5
OCR_TIMEOUT=300
OCR_RETRY_ATTEMPTS=3

# OCR features
OCR_ENABLE_PREPROCESSING=true
OCR_ENABLE_POSTPROCESSING=true
OCR_ENABLE_TABLE_DETECTION=true
OCR_ENABLE_TEXT_DETECTION=true

# =============================================================================
# TABLE DETECTION SETTINGS
# =============================================================================

# Table detection
TABLES_ENABLED=true
TABLES_MODE=detect
TABLES_CONFIDENCE_THRESHOLD=0.45

# Table detection methods
TABLES_ENABLE_MORPHOLOGY=true
TABLES_ENABLE_TEXT_ALIGNMENT=true
TABLES_ENABLE_CONTOUR_DETECTION=true

# Table processing
TABLES_MIN_CELLS=2
TABLES_MAX_CELLS=1000
TABLES_MIN_ROWS=2
TABLES_MAX_ROWS=1000
TABLES_MIN_COLS=2
TABLES_MAX_COLS=100

# =============================================================================
# LANGUAGE DETECTION SETTINGS
# =============================================================================

# Language detection
LANGUAGE_ENABLED=true
LANGUAGE_DEFAULT=de
LANGUAGE_SUPPORTED=de,en,fr,es,it
LANGUAGE_CONFIDENCE_THRESHOLD=0.8
LANGUAGE_FALLBACK=de
LANGUAGE_ENABLE_FALLBACK=true

# Language processing
LANGUAGE_NORMALIZE_TEXT=true
LANGUAGE_REMOVE_STOPWORDS=false
LANGUAGE_ENABLE_TOKENIZATION=true

# =============================================================================
# VALIDATION SETTINGS
# =============================================================================

# Validation
VALIDATION_ENABLED=true
VALIDATION_STRICT_MODE=false
VALIDATION_FAIL_FAST=false
VALIDATION_MAX_ERRORS=10
VALIDATION_ERROR_THRESHOLD=0.1

# Input validation
VALIDATION_CHECK_FILE_FORMAT=true
VALIDATION_CHECK_FILE_SIZE=true
VALIDATION_CHECK_FILE_INTEGRITY=true

# Output validation
VALIDATION_CHECK_SCHEMA=true
VALIDATION_CHECK_COMPLETENESS=true
VALIDATION_CHECK_QUALITY=true

# =============================================================================
# CACHING SETTINGS
# =============================================================================

# Cache
CACHE_ENABLED=true
CACHE_BACKEND=file
CACHE_LOCATION=cache/
CACHE_TTL=3600
CACHE_MAX_SIZE=1GB

# Cache policies
CACHE_INPUT=true
CACHE_OUTPUT=true
CACHE_INTERMEDIATE=true
CACHE_RESULT=true

# =============================================================================
# MONITORING SETTINGS
# =============================================================================

# Monitoring
MONITORING_ENABLED=true
MONITORING_ENABLE_PERFORMANCE=true
MONITORING_ENABLE_QUALITY=true
MONITORING_ENABLE_USAGE=true
MONITORING_ENABLE_ERRORS=true

# Alerting
ALERTING_ENABLED=true
ALERTING_ERROR_RATE_THRESHOLD=0.05
ALERTING_RESPONSE_TIME_THRESHOLD=5.0
ALERTING_MEMORY_USAGE_THRESHOLD=0.8

# Reporting
REPORTING_ENABLED=true
REPORTING_FREQUENCY=daily
REPORTING_FORMAT=json

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Security
SECURITY_ENABLED=true
SECURITY_STRICT_MODE=false
SECURITY_ALLOW_UNSAFE=false
SECURITY_ENABLE_VALIDATION=true

# File permissions
FILE_PERMISSIONS_STRICT=true
FILE_PERMISSIONS_MASK=644

# Access control
ACCESS_CONTROL_ENABLED=false
ACCESS_CONTROL_ALLOWED_USERS=
ACCESS_CONTROL_ALLOWED_GROUPS=

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Database connection
DATABASE_URL=
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME={{PHASE_NAME}}
DATABASE_USER={{PHASE_NAME}}_user
DATABASE_PASSWORD=

# Database settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# API endpoints
API_BASE_URL=
API_TIMEOUT=30
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1.0

# External services
EXTERNAL_SERVICE_1_URL=
EXTERNAL_SERVICE_1_API_KEY=
EXTERNAL_SERVICE_1_TIMEOUT=30

EXTERNAL_SERVICE_2_URL=
EXTERNAL_SERVICE_2_API_KEY=
EXTERNAL_SERVICE_2_TIMEOUT=30

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development
DEV_DEBUG=true
DEV_VERBOSE=false
DEV_PROFILING=false
DEV_MOCK_EXTERNAL_SERVICES=true

# Testing
TEST_ENABLE_MOCKS=true
TEST_ENABLE_FIXTURES=true
TEST_ENABLE_COVERAGE=true
TEST_COVERAGE_THRESHOLD=80

# Development tools
DEV_ENABLE_LINTING=true
DEV_ENABLE_FORMATTING=true
DEV_ENABLE_TYPE_CHECKING=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production
PROD_DEBUG=false
PROD_VERBOSE=false
PROD_PROFILING=false
PROD_OPTIMIZE_MEMORY=true
PROD_OPTIMIZE_CPU=true
PROD_ENABLE_COMPRESSION=true

# Production security
PROD_SECURITY_STRICT=true
PROD_SECURITY_ENABLE_VALIDATION=true
PROD_SECURITY_ALLOW_UNSAFE=false

# Production monitoring
PROD_MONITORING_ENABLE_DETAILED_LOGGING=true
PROD_MONITORING_ENABLE_METRICS=true
PROD_MONITORING_ENABLE_ALERTS=true

# =============================================================================
# STAGING SETTINGS
# =============================================================================

# Staging
STAGING_DEBUG=true
STAGING_VERBOSE=true
STAGING_PROFILING=false
STAGING_ENABLE_INTEGRATION_TESTS=true
STAGING_ENABLE_PERFORMANCE_TESTS=true
STAGING_ENABLE_LOAD_TESTS=true

# Staging monitoring
STAGING_MONITORING_ENABLE_DETAILED_LOGGING=true
STAGING_MONITORING_ENABLE_METRICS=true
STAGING_MONITORING_ENABLE_ALERTS=false

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/

# Recovery
RECOVERY_ENABLED=true
RECOVERY_AUTO_RECOVERY=true
RECOVERY_RECOVERY_TIMEOUT=300

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Email notifications
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=
EMAIL_SMTP_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# Slack notifications
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=
SLACK_USERNAME={{PHASE_NAME}}

# Webhook notifications
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=
WEBHOOK_TIMEOUT=30

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================

# Custom settings can be added here
# CUSTOM_SETTING_1=
# CUSTOM_SETTING_2=
# CUSTOM_SETTING_3=
