{
  "title": "MedFlux - Validation Codes by Phase",
  "uid": "medflux-validation-codes",
  "schemaVersion": 39,
  "panels": [
    {
      "type": "timeseries",
      "title": "Errors by Code and Phase",
      "gridPos": {"x": 0, "y": 0, "w": 24, "h": 8},
      "targets": [
        {"expr": "sum(rate(medflux_validation_failed_total[5m])) by (phase, code)", "legendFormat": "{{phase}} {{code}}"}
      ]
    },
    {
      "type": "timeseries",
      "title": "OK vs Fail by Phase (rate)",
      "gridPos": {"x": 0, "y": 8, "w": 24, "h": 8},
      "targets": [
        {"expr": "sum(rate(medflux_validation_ok_total[5m])) by (phase)", "legendFormat": "{{phase}} ok"},
        {"expr": "sum(rate(medflux_validation_failed_total[5m])) by (phase)", "legendFormat": "{{phase}} fail"}
      ]
    }
  ],
  "refresh": "30s",`n  "time": {"from": "now-6h", "to": "now"}
}
