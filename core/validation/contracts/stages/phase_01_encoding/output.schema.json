{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://medflux.example/schemas/validation/stages/phase_01_encoding/output.schema.json",
  "title": "Encoding - Output",
  "type": "object",
  "required": ["run_id", "unified_document", "stage_stats", "versioning"],
  "properties": {
    "run_id": {"type": "string", "minLength": 1, "format": "run-id"},
    "unified_document": {
      "type": "object",
      "required": ["stage", "items"],
      "properties": {
        "stage": {"const": "encoding"},
        "items": {
          "type": "array",
          "items": {"$ref": "#/$defs/encoding_item"},
          "minItems": 0
        }
      },
      "additionalProperties": false
    },
    "stage_stats": {
      "type": "object",
      "required": ["stage", "total_items"],
      "properties": {
        "stage": {"const": "encoding"},
        "total_items": {"type": "integer", "minimum": 0},
        "normalized": {"type": ["integer", "null"], "minimum": 0},
        "failed_normalizations": {"type": ["integer", "null"], "minimum": 0},
        "with_bom": {"type": ["integer", "null"], "minimum": 0},
        "utf8_native": {"type": ["integer", "null"], "minimum": 0}
      },
      "additionalProperties": false
    },
    "versioning": {"$ref": "../../base/base_contract.schema.json#/$defs/versioning"}
  },
  "additionalProperties": false,
  "$defs": {
    "encoding_item": {
      "type": "object",
      "required": ["file_path", "detection"],
      "properties": {
        "file_path": {"type": "string"},
        "detection": {
          "type": "object",
          "properties": {
            "encoding": {"type": ["string", "null"]},
            "confidence": {"type": ["number", "null"]},
            "bom": {"type": ["boolean", "null"]},
            "is_utf8": {"type": ["boolean", "null"]},
            "sample_len": {"type": ["integer", "null"], "minimum": 0}
          },
          "additionalProperties": false
        },
        "normalization": {
          "type": ["object", "null"],
          "properties": {
            "ok": {"type": ["boolean", "null"]},
            "normalized_path": {"type": ["string", "null"]},
            "reason": {"type": ["string", "null"]}
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}
