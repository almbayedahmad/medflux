{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://medflux.example/schemas/validation/stages/phase_02_readers/output.schema.json",
  "title": "Readers - Output",
  "type": "object",
  "required": ["run_id", "items", "stage_stats", "versioning"],
  "properties": {
    "run_id": {"type": "string", "minLength": 1, "format": "run-id"},
    "items": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["input", "outdir"],
        "properties": {
          "input": {"type": "string"},
          "outdir": {"type": "string"}
        },
        "additionalProperties": true
      }
    },
    "stage_stats": {
      "type": "object",
      "required": ["documents", "items_processed"],
      "properties": {
        "documents": {"type": "integer", "minimum": 0},
        "items_processed": {"type": "integer", "minimum": 0},
        "avg_conf": {"type": ["number", "null"]},
        "warnings": {"type": ["integer", "null"], "minimum": 0}
      },
      "additionalProperties": true
    },
    "versioning": {"$ref": "../../base/base_contract.schema.json#/$defs/versioning"}
  },
  "additionalProperties": false
}
