{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://medflux.example/schemas/validation/artifacts/detect_type/stage_stats.schema.json",
  "title": "DetectType Stage Stats Artifact",
  "type": "object",
  "required": ["stage", "total_items", "versioning"],
  "properties": {
    "stage": {"const": "detect_type"},
    "total_items": {"type": "integer", "minimum": 0},
    "counts": {"type": "object"},
    "versioning": {
      "type": "object",
      "required": ["app_version"],
      "properties": {
        "app_version": {"type": "string"},
        "schema_version": {"type": ["string", "null"]}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
