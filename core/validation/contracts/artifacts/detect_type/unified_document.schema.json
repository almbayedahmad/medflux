{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://medflux.example/schemas/validation/artifacts/detect_type/unified_document.schema.json",
  "title": "DetectType Unified Document Artifact",
  "type": "object",
  "required": ["stage", "items", "versioning"],
  "properties": {
    "stage": {"const": "detect_type"},
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file_path", "extension", "file_type"],
        "properties": {
          "file_path": {"type": "string"},
          "extension": {"type": "string"},
          "mime": {"type": ["string", "null"]},
          "file_type": {"type": "string"},
          "ocr_recommended": {"type": ["boolean", "null"]},
          "confidence": {"type": ["number", "null"]},
          "recommended": {"type": "object"},
          "details": {"type": "object"}
        },
        "additionalProperties": true
      }
    },
    "versioning": {
      "type": "object",
      "required": ["app_version"],
      "properties": {
        "app_version": {"type": "string"},
        "schema_version": {"type": ["string", "null"]}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
