{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://medflux.example/schemas/validation/artifacts/readers/summary.schema.json",
  "title": "Readers Summary Artifact",
  "type": "object",
  "required": ["run_id", "pipeline_id", "items", "stage_stats", "versioning"],
  "properties": {
    "run_id": {"type": "string"},
    "pipeline_id": {"type": "string"},
    "items": {"type": "array"},
    "stage_stats": {"type": "object"},
    "versioning": {
      "type": "object",
      "required": ["app_version"],
      "properties": {
        "app_version": {"type": "string"},
        "schema_version": {"type": ["string", "null"]}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
