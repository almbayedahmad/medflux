{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://medflux.example/schemas/validation/artifacts/encoding/unified_document.schema.json",
  "title": "Encoding Unified Document Artifact",
  "type": "object",
  "required": ["stage", "items", "versioning"],
  "properties": {
    "stage": {"const": "encoding"},
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file_path", "detection"],
        "properties": {
          "file_path": {"type": "string"},
          "detection": {
            "type": "object",
            "properties": {
              "encoding": {"type": ["string", "null"]},
              "confidence": {"type": ["number", "null"]},
              "bom": {"type": ["boolean", "null"]},
              "is_utf8": {"type": ["boolean", "null"]},
              "sample_len": {"type": ["integer", "null"], "minimum": 0}
            },
            "additionalProperties": true
          },
          "normalization": {
            "type": ["object", "null"],
            "properties": {
              "ok": {"type": ["boolean", "null"]},
              "normalized_path": {"type": ["string", "null"]},
              "reason": {"type": ["string", "null"]}
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    },
    "versioning": {
      "type": "object",
      "required": ["app_version"],
      "properties": {
        "app_version": {"type": "string"},
        "schema_version": {"type": ["string", "null"]}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
