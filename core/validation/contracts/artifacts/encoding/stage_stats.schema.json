{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://medflux.example/schemas/validation/artifacts/encoding/stage_stats.schema.json",
  "title": "Encoding Stage Stats Artifact",
  "type": "object",
  "required": ["stage", "total_items", "versioning"],
  "properties": {
    "stage": {"const": "encoding"},
    "total_items": {"type": "integer", "minimum": 0},
    "normalized": {"type": ["integer", "null"], "minimum": 0},
    "failed_normalizations": {"type": ["integer", "null"], "minimum": 0},
    "with_bom": {"type": ["integer", "null"], "minimum": 0},
    "utf8_native": {"type": ["integer", "null"], "minimum": 0},
    "versioning": {
      "type": "object",
      "required": ["app_version"],
      "properties": {
        "app_version": {"type": "string"},
        "schema_version": {"type": ["string", "null"]}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
