# Copy to .env (or load in your shell) before starting the API

# Enable monitoring & exporters
MEDFLUX_MONITORING=1
MEDFLUX_PROM_PORT=8000
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Service identification
MEDFLUX_SERVICE_NAME=medflux-api
MEDFLUX_VERSION=0.1.0
MEDFLUX_ENV=dev

# Tracing sampler (always, never, or ratio 0..1)
MEDFLUX_TRACE_SAMPLING=1
